    <HBox id="imageContainer" justifyContent="Center" width="100%">
        <items>
            <VBox id="image-box-wrapper" class="sapUiContentPadding" width="80%">
                <items>
                    <HBox id="image-box" alignItems="Center" justifyContent="SpaceAround" wrap="Wrap" class="no-break">
                        <items>
                            <VBox id="image-box-1" class="no-break">
                                <Image src="{oChecklistModel>/to_Attachment/results/0/att_url}" class="image" />
                                <u:FileUploader id="fileUploader1" buttonOnly="true" buttonText="Browse" 
                                    fileType="jpg,jpeg,png" maximumFileSize="1" change="onFileChange"
                                    uploadUrl="{oChecklistModel>/to_Attachment/results/0/att_url}"
                                    uploadComplete="handleUpload" visible="{oViewModel>/allowEdit}"
                                    fileSizeExceed="onFileSizeExceed"/>
                            </VBox>

                            <VBox id="image-box-2" class="no-break">
                                <Image src="{oChecklistModel>/to_Attachment/results/1/att_url}" class="image"/>
                                <u:FileUploader id="fileUploader2" buttonOnly="true" buttonText="Browse" 
                                    fileType="jpg,jpeg,png" maximumFileSize="1" change="onFileChange"
                                    uploadUrl="{oChecklistModel>/to_Attachment/results/1/att_url}"
                                    uploadComplete="handleUpload" visible="{oViewModel>/allowEdit}"
                                    fileSizeExceed="onFileSizeExceed"/>
                            </VBox>
                        </items>
                    </HBox>
                </items>
            </VBox>
        </items>
    </HBox>

