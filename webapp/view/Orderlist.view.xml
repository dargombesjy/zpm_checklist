<mvc:View controllerName="zpmchecklist.controller.Orderlist"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPage id="orderpage" headerExpanded="true">
        <f:header>
            <f:DynamicPageHeader id="dynheader01">
                <f:content>
                    <fb:FilterBar id="filterbar01" useToolbar="false" search="onSearch"
                        filterChange="onFilterBarChange" showClearOnFB="false">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem id="fb-group-1" name="aufnr" 
                                label="Order" groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="cmb-order"
                                        name="aufnr"
                                        selectionChange="onFilterSelectionChange"
                                        items="{
                                            path: 'pmOrderService>/ZC_PM0001_Orderlist',
                                            templateShareable: true
                                        }">
                                        <core:Item id="cmb-order-itm" key="{pmOrderService>aufnr}" text="{pmOrderService>aufnr}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="fb-group-2" name="gstrp" 
                                label="Bsc.Start" groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <DateRangeSelection
                                        id="date-range0"
                                        displayFormat="dd/MM/yyyy"
                                        showFooter="true"
                                        change="handleDateChange"/>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="fb-group-3" name="gewrk" 
                                label="Work Center" groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="cmb-gewrk"
                                        name="aufnr"
                                        selectionChange="onFilterSelectionChange"
                                        items="{
                                            path: '/WorkCenterVHSet',
                                            templateShareable: false
                                        }">
                                        <core:Item id="cmb-gewrk-itm" key="{arbpl}" text="{ktext}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="fb-group-4" name="ingpr" 
                                label="Planner Group" groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="cmb-ingpr"
                                        name="aufnr"
                                        selectionChange="onFilterSelectionChange"
                                        items="{
                                            path: '/PlannerGroupVHSet',
                                            templateShareable: true
                                        }">
                                        <core:Item id="cmb-ingpr-itm" key="{ingrp}" text="{innam}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="fb-group-5" name="cstat" 
                                label="Status" groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="cmb-cstat"
                                        name="cstat"
                                        selectionChange="onFilterSelectionChange"
                                        items="{
                                            path: 'statusModel>/cstat',
                                            templateShareable: true
                                        }">
                                        <core:Item id="cmb-cstat-itm" key="{statusModel>key}" text="{statusModel>text}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                    
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="ordertable01" inset="false"
                items="{
                    path: 'pmOrderService>/ZC_PM0001_Orderlist',
                    sorter: { path: 'gstrp', descending: true }
                }"
                alternateRowColors="true"
                growing="true"
                growingScrollToLoad="true"
                growingThreshold="10"
                width="auto"
                mode="SingleSelectLeft"
                selectionChange="onTableSelectionChange"
                sticky="HeaderToolbar,ColumnHeaders">
                <headerToolbar>
                    <OverflowToolbar id="ordoverflow01">
                        <Title id="orderTitle" text="{i18n>checklistTableHeader}"/>
                        <ToolbarSpacer id="orspacer01"/>
                        <Button id="ordCreateBtn" text="Create" press="onCreate" tooltip="Create" visible="{displayModel>/createMode}"/>
                        <!-- <Button id="ordChangeBtn" text="Change" press="onChange" tooltip="Change" visible="{displayModel>/changeMode}"/> -->
                        <Button id="ordDisplayBtn" text="Display" press="onDisplay" tooltip="Display" visible="{displayModel>/displayMode}"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="ortbl01-col01">
                        <header>
                            <Text id="orctxt01" text="Order No."/>
                        </header>
                    </Column>
                    <Column id="ortbl01-col04">
                        <header>
                            <Text id="orctxt04" text="Description"/>
                        </header>
                    </Column>
                    <Column id="ortbl01-col07">
                        <header>
                            <Text id="orctxt07" text="Basic Start"/>
                        </header>
                    </Column>
                    <Column id="ortbl01-col02">
                        <header>
                            <Text id="orctxt02" text="Work Center."/>
                        </header>
                    </Column>
                    <Column id="ortbl01-col03">
                        <header>
                            <Text id="orctxt03" text="Planner Group."/>
                        </header>
                    </Column>
                    <Column id="ortbl01-col05">
                        <header>
                            <Text id="orctxt05" text="Checklist No"/>
                        </header>
                    </Column>
                    <Column id="ortbl01-col06">
                        <header>
                            <Text id="orctxt06" text="Checklist Status"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="orcli001">
                        <cells>
                            <Text id="oritxt001" text="{pmOrderService>aufnr}"/>
                            <Text id="oritxt004" text="{pmOrderService>ktext}"/>
                            <Text id="oritxt007" text="{
                                path: 'pmOrderService>gstrp',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd/MM/yyyy'
                                }
                            }"/>
                            <Text id="oritxt002" text="{pmOrderService>cktext}"/>
                            <Text id="oritxt003" text="{pmOrderService>innam}"/>
                            <Text id="oritxt005" text="{pmOrderService>chkno}"/>
                            <Text id="oritxt006" text="{
                                path: 'pmOrderService>cstat',
                                formatter: '.formatter.formatStatus'
                            }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
