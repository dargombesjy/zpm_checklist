<mvc:XMLView id="detailView"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:custom="zpmchecklist.control"
    xmlns:mvc="sap.ui.core.mvc" controllerName="zpmchecklist.controller.Detail">
    
    <!-- <Page id="detailPage" showHeader="false" showNavButton="false" navButtonPress=".onNavBack"> -->
    <Page id="detailPage"
        title="{i18n>detailViewTitle}"
        titleLevel="H2">
    
        <customHeader>
            <OverflowToolbar id="otbSubheader">
                <Button id="backButton-d" icon="sap-icon://nav-back" press="onBack" />
                <Title id="page-title" text="{i18n>detailViewTitle}" level="H2" />
                <ToolbarSpacer id="detail-spacer01" />
                <!-- <Button id="editButton" text="Edit" type="Transparent" press="onEdit" visible="{= !${oViewModel>/allowEdit} }" /> -->
                <Button id="editButton" text="Edit" type="Transparent" press="onEdit" visible="{oViewModel>/allowChange}" />
                <Button id="saveButton" text="Save" type="Transparent" press="onSave" visible="{oViewModel>/allowEdit}" />
                <Button id="cancelButton" text="Cancel" type="Transparent" press="onCancel" visible="{oViewModel>/allowEdit}" />
                <Button id="postButton" text="Approve" type="Transparent" press="onApprovePress" visible="{oViewModel>/allowPost}" />
                <Button id="rejectButton" text="Reject" type="Transparent" press="onRejectPress" visible="{oViewModel>/allowReject}" />
                <Button id="printButton" text="Download PDF" type="Transparent" press="onDownloadPress" visible="{oViewModel>/allowPrint}" />
            </OverflowToolbar>
        </customHeader>

        <content>
            <VBox id="checklistContainer" width="100%">
                <items>
                    <core:Fragment fragmentName="zpmchecklist.fragment.HeaderContainer" type="XML"/>
                    <core:Fragment fragmentName="zpmchecklist.fragment.TableContainer" type="XML"/>
                    <core:Fragment fragmentName="zpmchecklist.fragment.FooterContainer" type="XML"/>
                </items>
            </VBox>
        </content>

        <footer>
            <OverflowToolbar id="otbFooter">
                <Button id="msgPopoverBtn" visible="{=!!${message>/}.length}" icon="sap-icon://message-popup" type="Emphasized"
                    text="{=${message>/}.length}" press="handlePopover"/>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:XMLView>